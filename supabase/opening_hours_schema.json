{
  "type": "object",
  "properties": {
    "days": {
      "type": "array",
      "minItems": 1,
      "maxItems": 7,
      "items": {
        "type": "object",
        "properties": {
          "day_of_week": {
            "type": "string",
            "enum": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
              "Sunday"
            ]
          },
          "opening_hours": {
            "type": "string",
            "pattern": "^([0-1][0-9]|2[0-3]):([0-5][0-9])$"
          },
          "closing_hours": {
            "type": "string",
            "pattern": "^([0-1][0-9]|2[0-3]):([0-5][0-9])$"
          }
        },
        "required": ["day_of_week", "opening_hours", "closing_hours"]
      }
    }
  },
  "required": ["days"]
}
